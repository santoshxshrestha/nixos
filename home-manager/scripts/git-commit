#!/usr/bin/env bash

# gc - A simple git commit script
# Usage: gc your commit message here (no quotes needed)

# Check if any arguments were provided
if [ $# -eq 0 ]; then
    echo "Usage: gc <commit message>"
    echo "Example: gc fix login bug"
    exit 1
fi

# Commit with all arguments as the message
git commit -m "$*"
